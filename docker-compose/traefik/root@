http:
  routers:
    external:
      entryPoints:
        - "websecure"
      rule: "Host(`vaultwarden.external.rafa.run`)"
      tls:
        certResolver: production
      service: k8s-cluster
    node01:
      entryPoints:
        - "websecure"
      rule: "Host(`node01.gameserver.rafa.run`)"
      tls:
        certResolver: production
      service: node01
  services:
    k8s-cluster: # This service points to my k8s cluster at home
      loadBalancer:
        servers:
          - url: "https://192.168.0.60"
    node01:
      loadBalancer:
        servers:
          - url: "http://192.168.0.40:8080"